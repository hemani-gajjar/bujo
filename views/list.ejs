<%- include('partials/listHeader.ejs') %>

      <div class="container"></div>
      
      <div class="entry">
        <% if(foundList.entries.length === 0){ %>

            <h1>No entries in the list yet!</h1>

        <% } %>
        <% foundList.entries.forEach(function(entry){ %>
            <a href="/lists/<%= listName %>/<%= entry._id %>">
              <div>
                <h1><%= entry.title %></h1>
                <p><%= entry.content.substring(0,100) %>...</p>
                <form action="/lists/<%= listName %>/delete" method="POST">
                  <button type="submit" name="listDeleteButton" value="<%= entry._id %>"><i class="far fa-trash-alt"></i></button>
                </form>
              </div>
            </a>
          <% }) %> 
      </div>

 
      <%- include('partials/footer.ejs') %>